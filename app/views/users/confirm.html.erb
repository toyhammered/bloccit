<div class="row">
  <div class="col-md-4">
    <h2>Sign Up Confirmation</h2>
    <p>Are you sure these values are correct?</p>

    <p>Email: <%= @user.email %></p>
    <p>Name: <%= @user.name %></p>

    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', method: :get %>
  </div>
</div>
